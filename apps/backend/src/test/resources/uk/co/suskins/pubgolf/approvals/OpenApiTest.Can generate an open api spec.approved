  "components" : {
    "schemas" : {
      "GameRequest" : {
        "type" : "object",
        "properties" : {
          "host" : {
            "type" : "string",
            "minLength" : 1
          }
        },
        "required" : [ "host" ]
      },
      "CreateGameResponse" : {
        "type" : "object",
        "properties" : {
          "gameId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "gameCode" : {
            "type" : "string"
          },
          "playerId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "playerName" : {
            "type" : "string"
          }
        },
        "required" : [ "gameCode", "gameId", "playerId", "playerName" ]
      },
      "ErrorResponse" : {
        "type" : "object",
        "properties" : {
          "message" : {
            "type" : "string"
          }
        },
        "required" : [ "message" ]
      },
      "ScoreRequest" : {
        "type" : "object",
        "properties" : {
          "hole" : {
            "type" : "integer",
            "format" : "int32",
            "maximum" : 9,
            "minimum" : 1
          },
          "score" : {
            "type" : "integer",
            "format" : "int32",
            "maximum" : 10,
            "minimum" : -10
          }
        },
        "required" : [ "hole", "score" ]
      },
      "RandomiseResponse" : {
        "type" : "object",
        "properties" : {
          "result" : {
            "type" : "string"
          },
          "hole" : {
            "type" : "integer",
            "format" : "int32"
          }
        },
        "required" : [ "hole", "result" ]
      },
      "GameJoinRequest" : {
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string",
            "minLength" : 1
          }
        },
        "required" : [ "name" ]
      },
      "JoinGameResponse" : {
        "type" : "object",
        "properties" : {
          "gameId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "gameCode" : {
            "type" : "string"
          },
          "playerId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "playerName" : {
            "type" : "string"
          }
        },
        "required" : [ "gameCode", "gameId", "playerId", "playerName" ]
      },
      "CompleteGameRequest" : {
        "type" : "object",
        "properties" : {
          "playerId" : {
            "type" : "string",
            "format" : "uuid"
          }
        },
        "required" : [ "playerId" ]
      },
      "GameStateResponse" : {
        "type" : "object",
        "properties" : {
          "gameId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "gameCode" : {
            "type" : "string"
          },
          "status" : {
            "type" : "string",
            "enum" : [ "ACTIVE", "COMPLETED" ]
          },
          "hostPlayerId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "players" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/PlayerResponse"
            }
          }
        },
        "required" : [ "gameCode", "gameId", "players", "status" ]
      },
      "PlayerResponse" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "format" : "uuid"
          },
          "name" : {
            "type" : "string"
          },
          "scores" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Score"
            }
          },
          "totalScore" : {
            "type" : "integer",
            "format" : "int32"
          },
          "randomise" : {
            "$ref" : "#/components/schemas/RandomiseOutcomeResponse"
          }
        },
        "required" : [ "id", "name", "scores", "totalScore" ]
      },
      "RandomiseOutcomeResponse" : {
        "type" : "object",
        "properties" : {
          "hole" : {
            "type" : "integer",
            "format" : "int32"
          },
          "result" : {
            "type" : "string"
          }
        },
        "required" : [ "hole", "result" ]
      },
      "Score" : {
        "type" : "object",
        "properties" : {
          "value" : {
            "type" : "integer",
            "format" : "int32"
          }
        },
        "required" : [ "value" ]
      },
      "OutcomeResponse" : {
        "type" : "object",
        "properties" : {
          "option" : {
            "type" : "string"
          },
          "optionSize" : {
            "type" : "integer",
            "format" : "int32"
          }
        },
        "required" : [ "option", "optionSize" ]
      },
      "OutcomesResponse" : {
        "type" : "object",
        "properties" : {
          "options" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/OutcomeResponse"
            }
          }
        },
        "required" : [ "options" ]
      }
    }
