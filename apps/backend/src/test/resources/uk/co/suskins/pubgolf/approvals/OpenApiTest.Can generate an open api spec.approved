{
  "openapi" : "3.1.0",
  "info" : {
    "title" : "Pub Golf",
    "description" : "API's to power Pub Golf Application",
    "contact" : {
      "name" : "Ben Suskins",
      "email" : "development@suskins.co.uk"
    },
    "version" : "1.0.0"
  },
  "servers" : [ {
    "url" : "http://localhost:8080",
    "description" : "Generated server url"
  } ],
  "paths" : {
    "/api/v1/games" : {
      "post" : {
        "tags" : [ "game-controller" ],
        "operationId" : "createGame",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/GameRequest"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "201" : {
            "description" : "Created",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/CreateGameResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/games/{gameCode}/players/{playerId}/scores" : {
      "post" : {
        "tags" : [ "game-controller" ],
        "operationId" : "submitScore",
        "parameters" : [ {
          "name" : "gameCode",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "playerId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/ScoreRequest"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "204" : {
            "description" : "No Content"
          }
        }
      }
    },
    "/api/v1/games/{gameCode}/join" : {
      "post" : {
        "tags" : [ "game-controller" ],
        "operationId" : "joinGame",
        "parameters" : [ {
          "name" : "gameCode",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/GameJoinRequest"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/CreateGameResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/games/{gameCode}" : {
      "get" : {
        "tags" : [ "game-controller" ],
        "operationId" : "gameState",
        "parameters" : [ {
          "name" : "gameCode",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/GameStateResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "GameRequest" : {
        "type" : "object",
        "properties" : {
          "host" : {
            "type" : "string"
          }
        },
        "required" : [ "host" ]
      },
      "CreateGameResponse" : {
        "type" : "object",
        "properties" : {
          "gameId" : {
            "type" : "string"
          },
          "gameCode" : {
            "type" : "string"
          },
          "playerId" : {
            "type" : "string"
          },
          "playerName" : {
            "type" : "string"
          }
        },
        "required" : [ "gameCode", "gameId", "playerId", "playerName" ]
      },
      "ScoreRequest" : {
        "type" : "object",
        "properties" : {
          "hole" : {
            "type" : "integer",
            "format" : "int32"
          },
          "score" : {
            "type" : "integer",
            "format" : "int32"
          }
        },
        "required" : [ "hole", "score" ]
      },
      "GameJoinRequest" : {
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          }
        },
        "required" : [ "name" ]
      },
      "GameStateResponse" : {
        "type" : "object",
        "properties" : {
          "gameId" : {
            "type" : "string"
          },
          "gameCode" : {
            "type" : "string"
          },
          "playerResponses" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/PlayerResponse"
            }
          }
        },
        "required" : [ "gameCode", "gameId", "playerResponses" ]
      },
      "PlayerResponse" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string"
          },
          "name" : {
            "type" : "string"
          },
          "scores" : {
            "type" : "array",
            "items" : {
              "type" : "integer",
              "format" : "int32"
            }
          }
        },
        "required" : [ "id", "name", "scores" ]
      }
    }
  }
}